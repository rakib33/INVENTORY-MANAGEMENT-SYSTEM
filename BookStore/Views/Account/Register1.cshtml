@model BookStore.Models.RegisterViewModel
@{
    ViewBag.Title = "Register";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    @Html.AntiForgeryToken()
    <h4>Create a new account.</h4>
    <hr />
    @Html.ValidationSummary()
    <div class="form-group">
        @Html.LabelFor(m => m.UserName, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.UserName, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
            
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Register" />
        </div>
    </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}



@model BookStore.Models.LoginViewModel

@{
    ViewBag.Title = "Log in";
    Layout = "~/Views/Shared/_LayoutLogin.cshtml";
}
<div class="col-md-3 center-margin">
    @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { id = "demo-form", data_parsley_validate = "", novalidate = "", role = "form" }))
    {
        @Html.AntiForgeryToken()

        <div class="content-box wow bounceInDown modal-content">
            <h3 class="content-box-header content-box-header-alt bg-default">
                <span class="icon-separator">
                    <i class="glyph-icon icon-cog"></i>
                </span>
                <span class="header-wrapper">
                    Create Account
                    @*<small>Login to your account.</small>*@
                </span>
               
            </h3>
            <hr />
            <div class="content-box-wrapper">
                <div class="login-error">
                    @Html.ValidationSummary(true)
                </div>
                <div class="form-group">
                    <label for="exampleInputEmail2">Email address:</label>
                    <div class="input-group">
                        <span class="input-group-addon addon-inside bg-gray">
                            <i class="glyph-icon icon-envelope-o"></i>
                        </span>
                        @Html.TextBoxFor(m => m.UserName, new { data_parsley_type = "email", placeholder = "Email address", required = "", @class = "form-control", data_parsley_id = "3520" })
                        <ul class="parsley-errors-list" id="parsley-id-3520">
                            @Html.ValidationMessageFor(m => m.UserName)
                        </ul>
                    </div>
                </div>


                <div class="form-group">
                    <label for="exampleInputEmail2">Password:</label>
                    <div class="input-group">
                        <span class="input-group-addon addon-inside bg-gray">
                            <i class="glyph-icon icon-unlock-alt"></i>
                        </span>
                        @Html.PasswordFor(m => m.Password, new { required = "", @class = "form-control", data_parsley_id = "9330", @placeholder = "Password" })
                        <ul class="parsley-errors-list" id="parsley-id-9330">
                            @Html.ValidationMessageFor(m => m.Password)
                        </ul>

                    </div>
                </div>


                <div class="form-group">
                    <a href="" title="Recover password">Forgot Your Password?</a>
                </div>
                <button class="btn btn-success btn-block">Sign In</button>
            </div>
        </div>
    }
</div>
