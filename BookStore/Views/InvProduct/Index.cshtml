@model IEnumerable<BookStore.Models.Inventory.Product>

@{
    ViewBag.Title = "Index";
}

@if (ViewBag.message == "success")
{
    <div class="alert alert-close alert-success">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>
        <div class="bg-green alert-icon">
            <i class="glyph-icon icon-check"></i>
        </div>
        <div class="alert-content">
            <h4 class="alert-title">Success Message Alert</h4>

            @if (ViewBag.message == "success")
            {
                <p>Data Save Successfull! </p>
            }
            <p>@Html.Raw(ViewBag.message)</p>


        </div>
    </div>

}
else if (ViewBag.message == "")
{
    <div class="alert alert-close alert-success">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>

        <div class="alert-content">
            <h4 class="alert-title">Wellcome Product List Form</h4>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>

        <div class="alert-content">
            <h4 class="alert-title">Unsuccessful Alert</h4>
            <p>@Html.Raw(ViewBag.message)</p>
        </div>
    </div>

}

    <div class="panel">
        <div class="panel-body">
            <h3 class="title-hero">
                @Html.Raw(ViewBag.message)
            </h3>
            <div class="example-box-wrapper">
                @*@Html.ActionLink("Add Product", "Create","InvProduct", new { @class = "btn btn-primary" })*@
                <a class="btn btn-sm btn-primary btn-hover"  href="/InvProduct/Create">
                    <span> Add Product</span>
                    <i class="glyph-icon icon-plus" title="" data-original-title=".icon-plus-square" aria-describedby="tooltip941007">                   
                </i>               
                </a>
                <div id="datatable-responsive_wrapper" class="dataTables_wrapper form-inline margin-top-05">
                    <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                  
                            @*dt-responsive*@
                            @*<table id="datatable-responsive" class="table table-striped table-bordered responsive no-wrap" cellspacing="0" width="100%">*@
                            <thead>
                                <tr role="row">
                                    <th style="width:5px" class="all">Sl No</th>                             
                                    <th class="all">Name</th>
                                    <th>Image</th>
                                    <th>Product Code</th>
                                    <th>Cost Price</th>
                                    <th>Sell Price</th>
                                    <th>Catagory</th>
                                    <th>Brand</th>                                 
                                    <th class="none">Description</th>
                                    <th class="all"></th>
                                </tr>
                            </thead>
                           
                            <tbody>
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td></td>
                                        <td>@item.Name</td>
                                        <td><img width="100" height="100" src="@Url.Action("GetProductImage", "Image", new { id = item.Id })"></td>
                                        <td>@item.BarCode</td>
                                        <td>@item.CostPrice BDT</td>
                                        <td>@item.SalePrice BDT</td>
                                        <td>@item.Catagory_Id</td>
                                        <td>@item.Brand_Id</td>
                                        
                                        <td>@item.Description</td>

                                        <td>
                                            <a href="@Url.Action("Edit", "InvProduct", new { id = item.Id })" class="btn btn-default btn-sm font-green" data-content="Edit Product..@item.Name" data-trigger="hover" data-placement="top" data-original-title="@item.Name">
                                                <i class="glyph-icon icon-edit" title="">
                                                </i>
                                            </a>

                                            <a href="@Url.Action("Details", "InvProduct", new { id = item.Id })" class="btn btn-default btn-sm font-green">
                                                <i class="glyph-icon icon-ellipsis-v" title="" data-original-title=".icon-ellipsis-v"></i>
                                            </a>

                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                </div>
        </div>
    </div>


    
