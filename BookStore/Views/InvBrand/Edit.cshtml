@model BookStore.Models.Inventory.Brand

<div id="productId">   
    <div id="page-title">
        <h2>Brand Edit Forms</h2>
        <h6> You can edit your product brand.</h6>
    </div>

    <div class="panel">
        <div class="panel-body">

            <div class="example-box-wrapper">
                @using (Html.BeginForm("Edit", "InvBrand", FormMethod.Post, new { @class = "form-horizontal bordered-row", id = "demo-form", data_parsley_validate = "", novalidate = "" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col-md-6 font-red">
                            @Html.ValidationSummary(true)
                        </div>
                        @Html.HiddenFor(model => model.Id)
                        @Html.HiddenFor(model => model.CreatedBy)
                        @Html.HiddenFor(model => model.CreatedDate)
                    </div>
                        <div class="row">

                            <div class="form-group">
                                <label class="col-sm-3 control-label"><span class="red">*</span>Catagory</label>
                                <div class="col-sm-6">
                                    @Html.DropDownList("MainCatagory", (IEnumerable<SelectListItem>)ViewBag.MainCatagoryId, "Select Catagory", new { @class = "form-control", required = "" })
                                </div>
                            </div>
                        </div>

                        <div class="row">
                            <div class="form-group">
                                <label class="col-sm-3 control-label"><span class="red">*</span>Sub Catagory</label>
                                <div class="col-sm-6">

                                    @Html.DropDownList("Catagory_Id", (IEnumerable<SelectListItem>)ViewBag.CatagoryId, "select SubCatagory", new { @class = "form-control", required = "" })

                                    <ul class="parsley-errors-list" id="parsley-id-7330"></ul>
                                </div>
                            </div>
                        </div>

                            <div class="row">
                                <div class="form-group">
                                    <label class="col-sm-3 control-label"><span class="red">*</span>Brand Name</label>
                                    <div class="col-sm-6">
                                        @Html.TextBoxFor(model => model.Name, new { placeholder = "Product Name", data_parsley_maxlength = "50", required = "", @class = "form-control", data_parsley_id = "4059" })

                                        <ul class="parsley-errors-list" id="parsley-id-4059"></ul>
                                    </div>
                                </div>
                            </div>

                                <div class="row">
                                    <div class="form-group">
                                        <label class="col-sm-3 control-label"><span class="red">*</span>Description</label>
                                        <div class="col-sm-6">
                                            @Html.TextBoxFor(model => model.Description, new { data_parsley_maxlength = "100", placeholder = "At most 100 characters", required = "", @class = "form-control", data_parsley_id = "7330" })
                                            <ul class="parsley-errors-list" id="parsley-id-7330"></ul>
                                        </div>
                                    </div>
                                </div>
                                    
                                    <div class="row">
                                        <div class="form-group">
                                            <label class="col-sm-3 control-label">ISIN</label>
                                            <div class="col-sm-6">
                                                @Html.TextBoxFor(model => model.ISIN, new { data_parsley_maxlength = "20", placeholder = "At most 20 characters", @class = "form-control", data_parsley_id = "7330" })
                                                <ul class="parsley-errors-list" id="parsley-id-7330"></ul>
                                            </div>
                                        </div>
                                    </div>

                
                    
                      <div class="row bg-default content-box">
                        <label class="col-sm-3 control-label">
                            <span class="pull-left">
                                <a class="btn btn-link font-blue" href="/InvBrand/Index">
                                    <i class="glyph-icon icon-angle-double-left" title="" data-original-title=".icon-angle-double-left" aria-describedby="tooltip602646">
                                        Back to List
                                    </i>
                                </a>
                            </span>
                        </label>
                        <div class="col-sm-4">
                            <button class="btn btn-lg btn-primary btn-hover" id="btnSubmit">
                                <span>Edit Brand</span>
                                <i class="glyph-icon icon-check" title="" data-original-title=".icon-check" aria-describedby="tooltip941007"></i>
                            </button>
                        </div>
                    </div>
                    
                    @*<div class="bg-default content-box text-center pad20A mrg25T">
                        <span class="pull-left button-pane">
                            <a class="btn btn-link font-blue" href="/InvBrand/Index">
                                <i class="glyph-icon icon-angle-double-left" title="" data-original-title=".icon-angle-double-left" aria-describedby="tooltip602646">
                                    Back to List
                                </i>
                            </a>
                        </span>
                        <button class="btn btn-lg btn-primary">Edit Brand</button>
                    </div>*@
                }
            </div>
        </div>
    </div>
</div>

<script src="~/Scripts/Brandedit.js"></script>