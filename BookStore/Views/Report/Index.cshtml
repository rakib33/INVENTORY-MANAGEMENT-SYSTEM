<script src="~/Scripts/jquery-ui.js"></script>

<div class="panel">
    <div class="panel-body">
        <h3 class="title-hero">
            @*Responsive data tables*@
        </h3>
        <div class="example-box-wrapper">

            <div class="panel-info col-sm-12">
                <div class="panel-heading txt-hight-35">
                    Product In Stock Report
                </div>
                <div class="panel-body">

                    <form action="@Url.Action("ProductInStock", "Report")" method="post">
                        <div class="row margin-top-05">

                            <label class="col-sm-2 pull-left text-center"><span class="font-red"></span>Product</label>
                            <div class="col-sm-3">
                                @Html.DropDownList("ProductId", (IEnumerable<SelectListItem>)ViewBag.Product, "--select product--", new { id = "ProductId", @class = "form-control pull-left txt-hight-35" })
                            </div>

                            <label class="col-sm-2 control-label pull-left"><span class="red">*</span>Invoice Date(To)</label>
                            <div class="col-sm-3">
                                <div class="input-prepend input-group">
                                    <span class="add-on input-group-addon">
                                        <i class="glyph-icon icon-calendar"></i>
                                    </span>
                                    <span>
                                        @Html.TextBox("PToDate", "", new {name="PToDate",id="SToDate", @class = "datepicker form-control", type = "text", required = "required", data_parsley_id = "4059" })
                                    </span>
                                    <ul class="parsley-errors-list" id="parsley-id-4059"></ul>
                                </div>
                            </div>

                            <div class="col-sm-2">
                                <button class="btn btn-sm btn-primary">
                                    <span>Print</span>
                                    <i class="glyph-icon icon-print" title="" data-original-title=".icon-print" aria-describedby="tooltip941007">
                                    </i>
                                </button>
                            </div>
                        </div>

                    </form>

                </div>
            </div>

