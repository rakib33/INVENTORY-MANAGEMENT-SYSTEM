@model IEnumerable<BookStore.Models.Infrastructure.ApplicationUser>
@{
    ViewBag.Title = "Customer";
    TempData["type"] = ViewBag.type;
}


<div id="page-title">
    <h3>Customer List</h3>
    <h6>Find out all Customer here.</h6>
</div>

<div class="panel">
    <div class="panel-body">
        <div class="example-box-wrapper">

            <a class="btn btn-primary btn-hover" href="/User/Create?type=Customer">
                <span> Add Customer</span>
                <i class="glyph-icon icon-plus" title="" data-original-title=".icon-plus" aria-describedby="tooltip941007">
                </i>
            </a>
            @*<a class="btn btn-primary" href="/User/Create?type=Customer">
                <i class="glyph-icon icon-plus" title="" data-original-title=".icon-plus-square" aria-describedby="tooltip941007">
                    Add Customer
                </i>
            </a>*@
            <h3 class="title-hero">
                @Html.Raw(ViewBag.message)
            </h3>


            <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%">
                <thead>
                    <tr>
                      
                        <th>Sl No</th>
                        <th>Name</th>
                        <th>NID</th>
                        <th>Phone</th>
                        <th>Present Address</th>
                        <th>Permanent Address</th>
                        <th>Country</th>
                       
                        <th></th>

                        <th>Created By</th>
                    </tr>
                </thead>


                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td></td>
                            <td>@item.Name</td>
                            <td>@item.NID</td>
                            <td>@item.Phone</td>
                            <td>@item.PresentAddress</td>
                            <td>@item.PermanentAddress</td>
                            <td>@item.Country</td>
                      
                            <td>
                                <a href="@Url.Action("Edit", "User", new { id = item.Id, type =item.UserType})" class="btn btn-default btn-sm font-green" data-content="Edit Product..@item.Name" data-trigger="hover" data-placement="top" data-original-title="@item.Name">
                                    <i class="glyph-icon icon-edit" title="">
                                    </i>
                                </a>

                                <a href="@Url.Action("Details", "User", new { id = item.Id })" class="btn btn-default btn-sm font-green">
                                    <i class="glyph-icon icon-ellipsis-v" title="" data-original-title=".icon-ellipsis-v"></i>
                                </a>

                            </td>
                            <td>@item.CreatedBy</td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>
