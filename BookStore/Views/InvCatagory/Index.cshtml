
@model IEnumerable<BookStore.Models.Inventory.Catagory>

@{
    ViewBag.Title = "Index";
    string ParentId = ViewBag.parentId;
}

@if (ViewBag.message == "success")
{
    <div class="alert alert-close alert-success">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>
        <div class="bg-green alert-icon">
            <i class="glyph-icon icon-check"></i>
        </div>
        <div class="alert-content">
            <h4 class="alert-title">Success Message Alert</h4>

            @if (ViewBag.message == "success")
            {
                <p>Data Save Successfull! </p>
            }
            <p>@Html.Raw(ViewBag.message)</p>


        </div>
    </div>

}
else if (ViewBag.message == "")
{
    <div class="alert alert-close alert-success">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>

        <div class="alert-content">
            <h4 class="alert-title">Wellcome Product Catagory List Form</h4>
        </div>
    </div>
}
else
{
    <div class="alert alert-danger">
        <a href="#" title="Close" class="glyph-icon alert-close-btn icon-remove"></a>

        <div class="alert-content">
            <h4 class="alert-title">Unsuccessful Alert</h4>
            <p>@Html.Raw(ViewBag.message)</p>
        </div>
    </div>

}

<div class="panel">
    <div class="panel-body">        
        <div class="example-box-wrapper">
            <a class="btn btn-primary btn-hover" href="/InvCatagory/Create">
                <span>Add Catagory</span>
                <i class="glyph-icon icon-plus" title="" data-original-title=".icon-plus" aria-describedby="tooltip941007">                  
                </i>
            </a>
            <h3 class="title-hero">
                @Html.Raw(ViewBag.message)
            </h3>
            <div id="datatable-responsive_wrapper">
                <table id="example" class="table table-striped table-bordered dt-responsive nowrap" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info">

                    @*<table id="datatable-responsive" class="table table-striped table-bordered responsive no-wrap dataTable dtr-inline" cellspacing="0" width="100%" role="grid" aria-describedby="datatable-responsive_info" style="width: 100%;">*@
                    <thead>
                        <tr role="row">
                            <th>Sl No</th>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Is Main</th>
                            <th></th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                        <tr>
                            <td></td>
                            <td>@item.Name</td>

                            <td>@item.Description</td>
                            <td>
                                @if (item.Parent_Id != null && !string.IsNullOrEmpty(item.Parent_Id))
                                {
                                    <span>Sub Catagory</span>
                                }
                                else { 
                                <span>Main Catagory</span>
                                }
                            </td>

                            <td>
                                <a href="@Url.Action("Edit", "InvCatagory", new { id = item.Id })" class="btn btn-sm btn-default font-green" data-content="Edit Product..@item.Name" data-trigger="hover" data-placement="top" data-original-title="@item.Name">
                                    <i class="glyph-icon icon-edit" title="">
                                    </i>
                                </a>

                                <a href="@Url.Action("Details", "InvCatagory", new { id = item.Id })" class="btn btn-sm btn-default font-green">
                                    <i class="glyph-icon icon-ellipsis-v" title="" data-original-title=".icon-ellipsis-v"></i>
                                </a>
                                @if (item.Parent_Id != null && !string.IsNullOrEmpty(item.Parent_Id)) { 
                                <a href="@Url.Action("SubCatagory", "InvCatagory", new { id = item.Id })" class="btn btn-sm btn-default font-green">
                                    <i class="glyph-icon icon-list" title="" data-original-title=".icon-ellipsis-v"></i>
                                </a>
                                }

                            </td>
                        </tr>
                        }

                    </tbody>
                </table>
            </div>


            <div class="row bg-default content-box">
                <label class="col-sm-3 control-label">
                    <span class="pull-left">
                        <a class="btn btn-link font-blue" href="/InvCatagory/Index">
                            <i class="glyph-icon icon-angle-double-left" title="" data-original-title=".icon-angle-double-left" aria-describedby="tooltip602646">
                                Back to List
                            </i>
                        </a>
                    </span>
                </label>                
            </div>
        </div>
    </div>
</div>